# Stage 1: Build PHP with extensions
FROM php:8.2.23-fpm-alpine AS php-base

ARG XDEBUG_VERSION=3.4.2

USER root

# Update vulnerable packages to fixed versions
RUN --mount=type=cache,target=/var/cache/apk \
    apk upgrade --no-cache && \
    apk add --no-cache \
    'libcrypto3>=3.3.3-r0' \
    'libssl3>=3.3.3-r0' \
    'openssl>=3.3.3-r0' \
    'libxml2>=2.12.10-r0' \
    'sqlite-libs>=3.45.3-r2' \
    'xz>=5.6.2-r1' \
    'xz-libs>=5.6.2-r1'

RUN --mount=type=cache,target=/var/cache/apk \
    apk add --no-cache linux-headers g++ make autoconf libc-dev pkgconf \
    freetype-dev \
    libjpeg-turbo-dev \
    libpng-dev \
    libzip-dev \
    curl-dev \
    vim \
    bzip2-dev \
    icu-dev \
    libxml2-dev \
    oniguruma-dev \
    zlib-dev \
    libxslt-dev \
    $PHPIZE_DEPS

RUN --mount=type=cache,target=/tmp/pear \
    docker-php-ext-configure zip && \
    docker-php-ext-configure gd --with-freetype --with-jpeg && \
    docker-php-ext-configure xsl && \
    docker-php-ext-install -j$(nproc) \
        gd \
        zip \
        pdo_mysql \
        bz2 \
        curl \
        mbstring \
        intl \
        soap \
        xml \
        bcmath \
        sockets \
        ftp \
        xsl

# Install Xdebug
RUN --mount=type=cache,target=/tmp/pear \
    pecl install xdebug-${XDEBUG_VERSION} && docker-php-ext-enable xdebug

RUN apk del $PHPIZE_DEPS && rm -rf /tmp/* /var/cache/apk/*

# Stage 3: Main application image
FROM php:8.2.23-fpm-alpine

ARG XDEBUG_VERSION=3.4.2
ARG UID=1000
ARG GID=1000
ARG TARGET_STAGE

USER root

# Update vulnerable packages to fixed versions
RUN --mount=type=cache,target=/var/cache/apk \
    apk upgrade --no-cache && \
    apk add --no-cache \
    'libcrypto3>=3.3.3-r0' \
    'libssl3>=3.3.3-r0' \
    'openssl>=3.3.3-r0' \
    'libxml2>=2.12.10-r0' \
    'sqlite-libs>=3.45.3-r2' \
    'xz>=5.6.2-r1' \
    'xz-libs>=5.6.2-r1'

# Install only runtime dependencies (not build dependencies)
RUN apk add --no-cache \
    freetype \
    libjpeg-turbo \
    libpng \
    libzip \
    curl \
    vim \
    bzip2 \
    icu \
    oniguruma \
    zlib \
    libxslt \
    shadow

# Copy PHP extensions from php-base stage
COPY --from=php-base /usr/local/lib/php/extensions/ /usr/local/lib/php/extensions/
COPY --from=php-base /usr/local/etc/php/conf.d/ /usr/local/etc/php/conf.d/

# Copy Composer from Stage 1
COPY --from=composer /usr/bin/composer /usr/local/bin/composer

# Install Composer configuration
COPY ./docker/${TARGET_STAGE:-dev}/php/php.ini /usr/local/etc/php/php.ini

WORKDIR /var/www/html/magento-app

# Copy vendor from composer stage (cached layer)
COPY --from=composer /app/vendor ./vendor

# Copy composer files
COPY composer*.json ./

# Copy application code
COPY . .

# Setup Magento
RUN mkdir -p /var/www/html/magento-app/generated \
    && mkdir -p /var/www/html/magento-app/var \
    && mkdir -p /var/www/html/magento-app/var/cache \
    && mkdir -p /var/www/html/magento-app/var/tmp \
    && mkdir -p /var/www/html/magento-app/var/log \
    && mkdir -p /var/www/html/magento-app/var/page_cache \
    && mkdir -p /var/www/html/magento-app/pub \
    && mkdir -p /var/www/html/magento-app/pub/static \
    && mkdir -p /var/www/html/magento-app/pub/media
COPY docker/${TARGET_STAGE:-dev}/php/docker-php-ext-xdebug.ini /usr/local/etc/php/conf.d/docker-php-ext-xdebug.ini
# Change permissions
RUN chown -R www-data:www-data \
    /var/www/html/magento-app/generated \
    /var/www/html/magento-app/var \
    /var/www/html/magento-app/pub/static \
    /var/www/html/magento-app/pub/media
RUN chmod -R 755 \
    /var/www/html/magento-app/generated \
    /var/www/html/magento-app/var \
    /var/www/html/magento-app/pub/static \
    /var/www/html/magento-app/pub/media

RUN find /var/www/html/magento-app/generated /var/www/html/magento-app/var /var/www/html/magento-app/pub/static /var/www/html/magento-app/pub/media -type d -exec chmod 775 {} \;
RUN find /var/www/html/magento-app/generated /var/www/html/magento-app/var /var/www/html/magento-app/pub/static /var/www/html/magento-app/pub/media -type f -exec chmod 664 {} \;

RUN usermod -u ${UID} www-data && groupmod -g ${GID} www-data

COPY ./docker/${TARGET_STAGE:-dev}/php/startup.sh /usr/local/bin/startup.sh
RUN chmod +x /usr/local/bin/startup.sh

USER www-data:www-data
CMD ["php-fpm"]
EXPOSE 9000